<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.dirtyreadtest.UserMapper">
    <select id="selectUserById" resultType="io.github.dirtyreadtest.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <update id="updateUser" parameterType="io.github.dirtyreadtest.User">
        UPDATE user SET name=#{name}, age=#{age} WHERE id=#{id}
    </update>
</mapper>